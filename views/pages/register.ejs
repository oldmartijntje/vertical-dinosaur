                                    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="50" cy="50" r="45" fill="var(--primary)" />
                                        <text x="50%" y="50%" text-anchor="middle" dominant-baseline="central"
                                            font-size="40">ðŸ¦•</text>
                                    </svg>
                                    <div class="brand-name">Register for Vertical-Dinosaur</div>
                                </div>
                                <%- include('../components/register/registerInfo') %>
                                    <%- include('../components/register/registerForm', { error: typeof error
